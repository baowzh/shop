{% extends 'shop_frame.twig' %}
{% block main %}
   <div class="container">
   <row>
   
   <div class="col-md-9 col-lg-9 col-sm-12 col-xs-12" >              
                <ul class="ty-article-list">
                 {% for postAndImage in lists %}  
                  <li class="item">
                   <a href="{{ url('post_detail', {'id': postAndImage.post.ID}) }}">
                    <image class="thumb" src="{{postAndImage.image}}"/>
                    </a>
                   <div class="article">
                     <div class="title">
                      <a href="{{ url('post_detail', {'id': postAndImage.post.ID}) }}">{{postAndImage.post.post_title}}</a>
                     </div>
                     <div class="author">
                       www.office-soft.jp
                     </div>
                     <div class="createDate">
                      |{{postAndImage.post.post_date}}
                     </div>
                     <div class="abstract">
                      <a href="{{ url('post_detail', {'id': postAndImage.post.ID}) }}">{{postAndImage.abstract}}</a>
                     </div>
                   </div>
                   <div>
                  </li>                                                  
                 {% endfor %}
                </ul>
                
                <nav aria-label="Page navigation">
                 <ul class="pagination" id="pagination"></ul>
               </nav>
                              
    </div>
    <div class="col-md-2 col-lg-2 col-sm-12 col-xs-12">
